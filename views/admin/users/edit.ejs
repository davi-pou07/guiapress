<%- include('../../partials/header.ejs')%>
    <%- include('../../partials/navbar.ejs')%>
        <div class="container">
            <hr>
            <div class="card mt-5">
                <div class="card-header">
                    <h2>Atualização de Usuário</h2>
                </div>
                <div class="card-body">
                    <form action="/users/update" method="POST">
                        <input class="form-control" type="email" name="email" placeholder="Exemple@exemple.com" value="<%=users.email%>">
                        <br>
                        <input class="form-control" type="password" name="password" placeholder="********" value="<%=users.password%>">
                        <br>
                        <input type="hidden" name="id" value="<%=users.id%>">
                        <button type="submit" class="btn btn-success form-control">Atualizar</button>
                    </form>
                </div>
            </div>

        </div>
        <%- include('../../partials/footer.ejs')%>