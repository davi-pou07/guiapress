<%- include('../../partials/header.ejs')%>

    <body>
        <%- include('../../partials/navbar2.ejs')%>
            <div class="container">
                <hr>
                <%result.articles.rows.forEach(articles=>{%>
                    <div class="card">
                        <div class="card-header">
                            <h2>
                                <%= articles.title%>
                            </h2>
                        </div>
                        <div class="card-body"></div>
                        <a href="/<%= articles.slug%>" class="btn btn-success">Ler Artigo</a>
                    </div>
                    <br>
                    <%})%>
                        <div class="row">
                            <div class="col col-12">
                                <%if (result.page> 2){%>

                                    <a style="float: left;" href="/articles/page/<%=result.page-1%>"><<< Pagina anterior</a>

                                <%}else if(result.page==2){%>

                                    <a style="float: left;" href="/"><<< Pagina anterior</a>

                                <%}%>

                                <%if(result.next){%>

                                    <a style="float: right;"href="/articles/page/<%=result.page+1%>">Proxima pagina >>></a>

                                <%}%>
                            </div>
                        </div>
                        <hr>
            </div>
    </body>
    <%- include('../../partials/footer.ejs')%>