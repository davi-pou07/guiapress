<%- include('../../partials/header.ejs')%>

    <%- include('../../partials/navbar.ejs')%>

        <div class="container">
            <hr>
            <h2>Categorias</h2>
            <a href="/admin/categories/new"class='btn btn-success'>Criar nova categoria</a>
            <hr>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Titulo</th>
                        <th>Slug</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(category =>{ %>
                    <tr>
                        <th><%=category.id %></th>
                        <th><%=category.title %></th>
                        <th><%=category.slug %></th>
                        <th>
                            <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning">Editar</a>

                            <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmarDelecao(event,this)">
                                <input type="hidden" name="id" value="<%=category.id%>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                        </th>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <%- include('../../partials/footer.ejs')%>
        <script>
            function confirmarDelecao(event,form){
                //Não deixa enviar o formulario
                event.preventDefault();
                var decision = confirm("Você quer deletar essa categoria?")
                if (decision) {
                //Manda o formulario -- o This dentro de um evento em tml você esta referenciando o formulrio em sim
                    form.submit()
                } else {
                    
                }
            }
        </script>